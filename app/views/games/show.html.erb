<div id="game-show-header">
  <div class="home-team">
    <%= @home_team.name %>
  </div>
  <div class="result">
    <p> <%=  @home_team.action_in_game(Action.first, @game) %> - <%= @away_team.action_in_game(Action.first, @game) %></p>

  </div>
  <div class="away-team">
    <%= @away_team.name %>
  </div>
</div>

<% if current_user.is_manager?(@tournament) %>
  <%= render partial: 'games/manager_actions' %>
<% end %>

<div id="highlights">
  <div class="home-team">
    <%= render partial: 'games/highlights', locals: { team: @home_team } %>
  </div>
  <div class="actions">
    <p>action</p>
  </div>
  <div class="away-team">
    <%= render partial: 'games/highlights', locals: { team: @away_team } %>
  </div>
</div>

<div id="team-stats">
  <div class="home-team">
    <%= render partial: 'games/team_highlights', locals: { team: @home_team, game: @game.id } %>
  </div>
  <div class="actions">
    <% Action.all.each do |action| %>
      <p><%= action.name %></p>
    <% end %>
  </div>
  <div class="away-team">
    <%= render partial: 'games/team_highlights', locals: { team: @away_team, game: @game.id } %>
  </div>
</div>
