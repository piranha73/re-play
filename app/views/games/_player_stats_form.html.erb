<%= simple_form_for(statistic) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :number_of_teams %>
  <%= f.input :number_of_players_per_team %>
  <%= f.input :price %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.button :submit, "Create Tournament", class: 'btn btn-primary' %>
<% end %>
