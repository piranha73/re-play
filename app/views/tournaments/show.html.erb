<script>
function tabToggle() {
  const tab = document.getElementById("active");
  const d2 = document.getElementById("map");
  if (tab.style.display !== "block") {
    tab.style.display = "block";
    d2.style.display = "none";
  } else {
    tab.style.display = "none";
    d2.style.display = "block";
  }
