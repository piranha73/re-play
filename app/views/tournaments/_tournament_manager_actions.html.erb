<div class="d-flex">
  <%= link_to edit_tournament_path(@tournament) do %>
    <div class="d-flex" style="margin-right: 15px;">
      <i class="fas fa-edit" ></i><h2 style="font-size: 20px; color: #11ffff;">Edit</h2>
    </div>
  <% end %>
  <%= link_to tournament_bookings_path(@tournament) do %>
    <div class="d-flex" style="margin-right: 15px;">
      <i class="fas fa-user-friends"></i><h2 style="font-size: 20px; color: #11ffff;">Subscriptions</h2>
    </div>
  <% end %>
  <%= link_to tournament_generate_calendar_path(@tournament), method: :post do%>
    <div class="d-flex">
      <i class="fas fa-calendar-alt"></i><h2 style="font-size: 20px; color: #11ffff;">Schedule Matches</h2>
    </div>
  <% end %>
</div>
