<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= yield(:navbar_class) %>">
  <%= link_to "Re-Play", root_path, class: "navbar-brand font-logo", style:"color: #11ffff !important; margin-left: 8px;" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "create tournament", new_tournament_path, class: "nav-link font-newgame", style: "color: #c7eaf5; padding-right: 40px" %>
        </li>
        <li class="nav-item active">
        <%= link_to "play", tournaments_path, class: "nav-link font-newgame", style: "color: #c7eaf5; padding-right: 40px" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "", class: "avatar dropdown-toggle far fa-user", style:"color: #11ffff; font-size: 25px; margin-top: 12px;", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Account", account_path, class: "dropdown-item" %>
            <%= link_to "Contact Us", more_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

