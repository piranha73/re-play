      </div>
    <% else %>
        <%= link_to tournament_path(tournament) do %>
      <div class="card-info-2" style="margin-top: 10px;">
        <h1 style="font-size: 24px; text-align: left; color: #C7EAF5;"><%= tournament.name %></h1>
