      <div class="card-info" style="margin-top: 10px;">
        <div class="right-text" style="">
          <%= link_to  tournament.name, tournament_path(tournament), style: "font-size: 24px; text-align: left; color: #C7EAF5;" %>
          <h2 style="font-size: 18px; text-align: left; color: #C7EAF5;"><%= tournament.description %></h2>
        </div>
          <%#= link_to "Subscriptions", new_tournament_path(tournament), class: "btn btn-success", style: "align-self: flex-end; margin-right: 5px; margin-bottom: 5px; text-align: center; align-content: center" %>
